@using System.Security.Claims
@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthenticationStateProvider

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">ITSOsiguranje</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="home" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="counter">
                <span class="bi bi-plus-square-fill" aria-hidden="true"></span> Counter
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="weather">
                <span class="bi bi-list-nested" aria-hidden="true"></span> Weather
            </NavLink>
        </div>

        <AuthorizeView>
            <Authorized Context="authState">
                @{
                    var roleId = authState.User.FindFirst("roleId")?.Value;
                }

                @if (roleId == "2")
                {
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="polise">
                            <span class="bi bi-list-nested" aria-hidden="true"></span> Polise zaposlenih
                        </NavLink>
                    </div>
                }
            </Authorized>
        </AuthorizeView>
        <AuthorizeView>
            <Authorized Context="authState">
                @{
                    var roleId = authState.User.FindFirst("roleId")?.Value;
                }

                @if (roleId == "3")
                {
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="polisepozaposlenom">
                            <span class="bi bi-list-nested" aria-hidden="true"></span> Moje Polise
                        </NavLink>
                    </div>
                }
            </Authorized>
        </AuthorizeView>
        <AuthorizeView>
            <Authorized Context="authState">
                @{
                    var roleId = authState.User.FindFirst("roleId")?.Value;
                }

                @if (roleId == "2")
                {
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="https://localhost/OsiguranjePHP/novaPolisa.php" target="_self">
                            <span class="bi bi-plus-square"></span> Nova polisa
                        </NavLink>
                    </div>
                }
            </Authorized>
        </AuthorizeView>

    </nav>
</div>
